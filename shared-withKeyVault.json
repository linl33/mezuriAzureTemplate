{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourcePrefix": {
            "type": "string",
            "defaultValue": "mezuri",
            "metadata": {
                "description": "Prefix attached to all resources created with this template"
            }
        },
        "DCAddresses": {
            "type": "array",
            "metadata": {
                "description": "Array of IP addresses for ADDS domain controller. Enter the addresses in JSON string array format."
            }
        },
        "VMSize": {
            "type": "string",
            "defaultValue": "Standard_DS1_v2",
            "allowedValues": [
                "Standard_A0",
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4",
                "Standard_A5",
                "Standard_A6",
                "Standard_A7",
                "Standard_A8",
                "Standard_A9",
                "Standard_A10",
                "Standard_A11",
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4",
                "Standard_D11",
                "Standard_D12",
                "Standard_D13",
                "Standard_D14",
                "Standard_D1_v2",
                "Standard_D2_v2",
                "Standard_D3_v2",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_D11_v2",
                "Standard_D12_v2",
                "Standard_D13_v2",
                "Standard_D14_v2",
                "Standard_D15_v2",
                "Standard_G1",
                "Standard_G2",
                "Standard_G3",
                "Standard_G4",
                "Standard_G5",
                "Standard_DS1",
                "Standard_DS2",
                "Standard_DS3",
                "Standard_DS4",
                "Standard_DS11",
                "Standard_DS12",
                "Standard_DS13",
                "Standard_DS14",
                "Standard_DS1_v2",
                "Standard_DS2_v2",
                "Standard_DS3_v2",
                "Standard_DS4_v2",
                "Standard_DS5_v2",
                "Standard_DS11_v2",
                "Standard_DS12_v2",
                "Standard_DS13_v2",
                "Standard_DS14_v2",
                "Standard_DS15_v2",
                "Standard_GS1",
                "Standard_GS2",
                "Standard_GS3",
                "Standard_GS4",
                "Standard_GS5"
            ]
        },
        "VMDiskType": {
            "type": "string",
            "defaultValue": "Premium_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Disk type of managed disk for this VM. Premium_LRS is only supported by the 'S' variant VMs, e.g. Standard_DS_1, Standard_GS_1."
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "odk",
            "metadata": {
                "description": "This VM's admin username."
            }
        },
        "adminPublicKey": {
            "type": "string",
            "metadata": {
                "description": "This VM's admin SSH public key."
            }
        },
        "VNETAddressPrefix": {
            "type": "string",
            "defaultValue": "192.168.1.0/24",
            "metadata": {
                "description": "Virtual network address space in CIDR notation."
            }
        },
        "defaultSubnetAddressPrefix": {
            "type": "string",
            "defaultValue": "192.168.1.0/24",
            "metadata": {
                "description": "Address space for the default subnet within the VNET defined above."
            }
        },
        "SQLServerName": {
            "type": "string",
            "metadata": {
                "description": "Name of the database server. This name must be globally unique."
            }
        },
        "SQLDatabaseName": {
            "type": "string",
            "metadata": {
                "description": "Name of the database."
            }
        },
        "SQLServerAdminUsername": {
            "type": "string",
            "metadata": {
                "description": "Username of the SQL Server administrator."
            }
        },
        "SQLServerAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the SQL Server administrator."
            }
        },
        "SQLServerAADAdminName": {
            "type": "string",
            "metadata": {
                "description": "Display name of an Azure Active Directory user/group, to be set as an administrator."
            }
        },
        "SQLServerAADAdminObjectID": {
            "type": "string",
            "metadata": {
                "description": "Object ID for the Azure Active Directory Administrator."
            }
        },
        "SQLDatabaseEdition": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "Edition of the database."
            }
        },
        "SQLDatabasePerformanceLevel": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "S0",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3"
            ],
            "metadata": {
                "description": "Performance level for the database. The value must be valid for the chosen edition."
            }
        },
        "SQLDatabaseMaxSize": {
            "type": "string",
            "defaultValue": "2147483648",
            "allowedValues": [
                "104857600",
                "524288000",
                "1073741824",
                "2147483648",
                "5368709120",
                "10737418240",
                "21474836480",
                "32212254720",
                "42949672960",
                "53687091200",
                "107374182400",
                "161061273600",
                "214748364800",
                "268435456000",
                "322122547200",
                "429496729600",
                "536870912000"
            ],
            "metadata": {
                "description": "Max size of the databasein bytes. The value must be within the range of allowed values for the chosen edition."
            }
        },
        "SQLDatabaseCollation": {
            "type": "string",
            "defaultValue": "SQL_Latin1_General_CP1_CI_AS",
            "metadata": {
                "description": "The collation of the database, check Microsoft's documentation for available options."
            }
        },
        "appServiceSKUName": {
            "type": "string",
            "defaultValue": "F1",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3"
            ],
            "metadata": {
                "description": "SKU for the App Service Plan."
            }
        },
        "numberOfAppServiceWorkers": {
            "type": "int",
            "minValue": 0,
            "maxValue": 10,
            "defaultValue": 0,
            "metadata": {
                "description": "The number of dedicated instances. For F1 and D1 plans, the only allowed value is 0. For other instances, allowed values are 1-10."
            }
        },
        "keyVaultServicePrincipalObjectId": {
            "type": "string",
            "metadata": {
                "description": "Object Id of the sercive principal for managing VM disk encryption"
            }
        },
        "keyVaultSKUName": {
            "type": "string",
            "defaultValue": "Standard",
            "allowedValues": [
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "SKU for the Key Vault"
            }
        }
    },
    "variables": {
        "templateBaseUrl": "https://raw.githubusercontent.com/linl33/mezuriAzureTemplate/master/",
        "nsgTemplateUrl": "[concat(variables('templateBaseUrl'), 'nsg.json')]",
        "swarmTemplateUrl": "[concat(variables('templateBaseUrl'), 'swarm.json')]",
        "sqlTemplateUrl": "[concat(variables('templateBaseUrl'), 'sql.json')]",
        "appServiceTemplateUrl": "[concat(variables('templateBaseUrl'), 'appService.json')]",
        "diskEncryptionKvTemplateUrl": "[concat(variables('templateBaseUrl'), 'diskEncryptKeyvault.json')]",
        "nsgName": "[concat(parameters('resourcePrefix'), '-nsg')]",
        "vmName": "[concat(parameters('resourcePrefix'), '-shared-swarm')]",
        "appServicePlanName": "[concat(parameters('resourcePrefix'), '-shared-plan')]",
        "mezuriWebApiAppServiceName": "[concat(parameters('resourcePrefix'), '-mezuriwebapi')]",
        "diskEncryptionKvName": "[concat(parameters('resourcePrefix'), '-diskencryptionvault')]"
    },
    "resources": [
        {
            "apiVersion": "2016-09-01",
            "name": "nsgLinkedTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('nsgTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "nsgName": {
                        "value": "[variables('nsgName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2016-09-01",
            "name": "sharedSwarmLinkedTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('swarmTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmName": {
                        "value": "[variables('vmName')]"
                    },
                    "vmSize": {
                        "value": "[parameters('VMSize')]"
                    },
                    "vmDiskType": {
                        "value": "[parameters('VMDiskType')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPublicKey": {
                        "value": "[parameters('adminPublicKey')]"
                    },
                    "nsgResourceId": {
                        "value": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                    },
                    "dnsServers": {
                        "value": "[parameters('DCAddresses')]"
                    },
                    "vnetAddressPrefix": {
                        "value": "[parameters('VNETAddressPrefix')]"
                    },
                    "defaultSubnetAddressPrefix": {
                        "value": "[parameters('defaultSubnetAddressPrefix')]"
                    }
                }
            },
            "dependsOn": [
                "nsgLinkedTemplate"
            ]
        },
        {
            "apiVersion": "2016-09-01",
            "name": "sqlLinkedTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('sqlTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serverName": {
                        "value": "[parameters('SQLServerName')]"
                    },
                    "databaseName": {
                        "value": "[parameters('SQLDatabaseName')]"
                    },
                    "administratorLogin": {
                        "value": "[parameters('SQLServerAdminUsername')]"
                    },
                    "administratorLoginPassword": {
                        "value": "[parameters('SQLServerAdminPassword')]"
                    },
                    "AADAdminName": {
                        "value": "[parameters('SQLServerAADAdminName')]"
                    },
                    "AADAdminObjectID": {
                        "value": "[parameters('SQLServerAADAdminObjectID')]"
                    },
                    "edition": {
                        "value": "[parameters('SQLDatabaseEdition')]"
                    },
                    "requestedServiceObjectiveName": {
                        "value": "[parameters('SQLDatabasePerformanceLevel')]"
                    },
                    "maxSizeBytes": {
                        "value": "[parameters('SQLDatabaseMaxSize')]"
                    },
                    "collation": {
                        "value": "[parameters('SQLDatabaseCollation')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2016-09-01",
            "name": "appServiceLinkedTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('appServiceTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "planName": {
                        "value": "[variables('appServicePlanName')]"
                    },
                    "SKUName": {
                        "value": "[parameters('appServiceSKUName')]"
                    },
                    "numberOfWorkers": {
                        "value": "[parameters('numberOfAppServiceWorkers')]"
                    },
                    "siteName": {
                        "value": "[variables('mezuriWebApiAppServiceName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2016-09-01",
            "name": "diskEncryptionKeyVaultLinkedTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('diskEncryptionKvTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultName": {
                        "value": "[variables('diskEncryptionKvName')]"
                    },
                    "SKUName": {
                        "value": "[parameters('keyVaultSKUName')]"
                    },
                    "servicePrincipalObjectId": {
                        "value": "[parameters('keyVaultServicePrincipalObjectId')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}